/* 水平间距 */
.top-state {
  height: 25px;
  width: 750rpx;
}
.public-header {
  position: fixed;
  width: 750rpx;
  height: 120rpx;
  background-image: linear-gradient(to right, #41b7fd, #734df0);
  top: 0;
  padding-top: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
}
.wrapper {
  position: relative;
  height: 100%;
}
page {
  height: 100%;
  background-color: #eae0e0;
}
.swiper-container {
  height: 460rpx;
}
.swiper-container image {
  width: 750rpx;
  height: 100%;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}
.container {
  background: #fff;
  position: absolute;
  top: 400rpx;
  left: 32rpx;
  right: 32rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.container .top-area {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.container .top-area .top-area-list {
  text-align: center;
}
.container .top-area .top-area-list .top-text {
  font-size: 24rpx;
  color: #666;
  padding-top: 8rpx;
}
.container2 {
  background: #fff;
  position: absolute;
  top: 600rpx;
  left: 32rpx;
  right: 32rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.container2 .bottom-area {
  padding: 20rpx;
}
.container2 .bottom-area .bottom-title {
  font-size: 36rpx;
  padding-bottom: 20rpx;
}
.container2 .bottom-area .bottom-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.container2 .bottom-area .bottom-container .bottom-list {
  width: 48%;
  text-align: center;
  border-radius: 20rpx;
  padding: 24rpx 0;
  color: #fff;
}
.container2 .bottom-area .bottom-container .bottom-list .list-description {
  font-size: 28rpx;
  padding-top: 4rpx;
}
.container2 .bottom-area .bottom-container .bottom-list:nth-of-type(1) {
  background-image: linear-gradient(to right, #cccccc, #C17DF5);
}
.container2 .bottom-area .bottom-container .bottom-list:nth-of-type(2) {
  background-image: linear-gradient(to right, #cccccc, #FE764E);
}
.container2 .bottom-area .bottom-container .bottom-list:nth-of-type(3) {
  margin-top: 20rpx;
  padding: 0;
}
.container2 .bottom-area .bottom-container .bottom-list:nth-of-type(3) button {
  height: 64px;
  background-image: linear-gradient(to right, #cccccc, #FE8087);
  border-radius: 20rpx;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
}
.container2 .bottom-area .bottom-container .bottom-list:nth-of-type(3) button text:first-child {
  height: 50rpx;
  padding-top: 8rpx;
}
.container2 .bottom-area .bottom-container .bottom-list:nth-of-type(3) button text:last-child {
  font-size: 28rpx;
}
.container2 .bottom-area .bottom-container .bottom-list:nth-of-type(4) {
  background-image: linear-gradient(to right, #cccccc, #48E67A);
  margin-top: 20rpx;
}

